<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="57dp"
            android:layout_height="402dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/constraintLayout_options">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <Button
                        android:text="level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="0dp" android:id="@+id/button_level"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/button_color"/>
                <Button
                        android:text="color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="0dp" android:id="@+id/button_color"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/button_filter"/>
                <Button
                        android:text="filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="0dp" android:id="@+id/button_filter"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/button_frame"/>
                <Button
                        android:text="frame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="0dp" android:id="@+id/button_frame" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/button_addImage"/>
                <Button
                        android:text="Sticker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="0dp" android:id="@+id/button_addSticker"
                        tools:layout_editor_absoluteY="8dp"/>
                <Button
                        android:text="image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="0dp" android:id="@+id/button_addImage"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/button_addSticker"/>
                <Button
                        android:text="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/button_text"/>
                <Button
                        android:text="next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" tools:layout_editor_absoluteY="366dp"
                        tools:layout_editor_absoluteX="0dp" android:id="@+id/button_nextPage"/>
                <Button
                        android:text="prev"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/button_prevPage"/>
                <Button
                        android:text="html"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/button_saveAsHtml"/>
                <Button
                        android:text="PDF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/button_PDF"/>
            </LinearLayout>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="306dp"
            android:layout_height="402dp"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout_options" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/constraintLayot_display">

    </android.support.constraint.ConstraintLayout>
    <HorizontalScrollView
            android:layout_width="368dp"
            android:layout_height="85dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:layout_editor_absoluteY="35dp"
                tools:layout_editor_absoluteX="177dp" android:id="@+id/Layout_Images">
        </LinearLayout>
    </HorizontalScrollView>
</android.support.constraint.ConstraintLayout>